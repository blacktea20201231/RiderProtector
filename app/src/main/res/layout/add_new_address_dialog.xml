<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_heading"
    android:layout_width="match_parent"
    android:layout_height="284dp"
    app:layout_constraintCircleRadius="20dp">

    <TextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="245dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Add a Missing Place"
        android:textColor="@color/primary_rider_blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_dismiss"
        android:layout_width="1dp"
        android:layout_height="2dp"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="259dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24" />

    <EditText
        android:id="@+id/report_title"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="Title"
        android:inputType="textMultiLine"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report" />

    <EditText
        android:id="@+id/report_address"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_address" />

    <ScrollView
        android:id="@+id/sv_address"
        android:layout_width="196dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_title">
        <EditText
            android:id="@+id/report_phone"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:hint="Phone"
            android:inputType="textMultiLine"
            android:textSize="15dp"
            />
    </ScrollView>



    <Button
        android:id="@+id/btn_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="Add"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>